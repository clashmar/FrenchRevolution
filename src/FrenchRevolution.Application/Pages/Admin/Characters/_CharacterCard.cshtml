@model FrenchRevolution.Contracts.Models.CharacterResponseDto

<div class="flex items-start space-x-4 mb-6">
    @if (!string.IsNullOrEmpty(Model.PortraitUrl))
    {
        <img src="@Model.PortraitUrl" alt="@Model.Name" class="w-24 h-24 rounded-lg object-cover" />
    }
    else
    {
        <div class="w-24 h-24 rounded-lg bg-gray-200 flex items-center justify-center">
            <span class="text-gray-500 text-2xl">@Model.Name[0]</span>
        </div>
    }
    <div>
        <h2 class="text-xl font-semibold text-gray-800">@Model.Name</h2>
        <p class="text-gray-600">@Model.Profession</p>
        <p class="text-gray-500 text-sm mt-1">
            @Model.Born.ToString("MMM d, yyyy") - @Model.Died.ToString("MMM d, yyyy")
        </p>
    </div>
</div>

@if (Model.Offices.Count > 0)
{
    <div class="mb-4">
        <h3 class="text-sm font-medium text-gray-700 mb-2">Offices</h3>
        <ul class="list-disc list-inside text-gray-600 text-sm">
            @foreach (var office in Model.Offices)
            {
                <li>@office.Title (@office.From.ToString("yyyy") - @office.To.ToString("yyyy"))</li>
            }
        </ul>
    </div>
}

@if (Model.Factions.Count > 0)
{
    <div class="mb-4">
        <h3 class="text-sm font-medium text-gray-700 mb-2">Factions</h3>
        <ul class="list-disc list-inside text-gray-600 text-sm">
            @foreach (var faction in Model.Factions)
            {
                <li>@faction.Title</li>
            }
        </ul>
    </div>
}
