@page "{id:guid}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Character";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Delete Character</h1>
    <p class="text-gray-600 mt-1">Are you sure you want to delete this character?</p>
</div>

<div class="bg-white rounded-lg shadow-md p-6 max-w-2xl">
    <div class="flex items-start space-x-4 mb-6">
        @if (!string.IsNullOrEmpty(Model.Character.PortraitUrl))
        {
            <img src="@Model.Character.PortraitUrl" alt="@Model.Character.Name" class="w-24 h-24 rounded-lg object-cover" />
        }
        else
        {
            <div class="w-24 h-24 rounded-lg bg-gray-200 flex items-center justify-center">
                <span class="text-gray-500 text-2xl">@Model.Character.Name[0]</span>
            </div>
        }
        <div>
            <h2 class="text-xl font-semibold text-gray-800">@Model.Character.Name</h2>
            <p class="text-gray-600">@Model.Character.Profession</p>
            <p class="text-gray-500 text-sm mt-1">
                @Model.Character.Born.ToString("MMM d, yyyy") - @Model.Character.Died.ToString("MMM d, yyyy")
            </p>
        </div>
    </div>

    @if (Model.Character.Offices.Count > 0)
    {
        <div class="mb-4">
            <h3 class="text-sm font-medium text-gray-700 mb-2">Offices</h3>
            <ul class="list-disc list-inside text-gray-600 text-sm">
                @foreach (var office in Model.Character.Offices)
                {
                    <li>@office.Title (@office.From.ToString("yyyy") - @office.To.ToString("yyyy"))</li>
                }
            </ul>
        </div>
    }

    @if (Model.Character.Factions.Count > 0)
    {
        <div class="mb-4">
            <h3 class="text-sm font-medium text-gray-700 mb-2">Factions</h3>
            <ul class="list-disc list-inside text-gray-600 text-sm">
                @foreach (var faction in Model.Character.Factions)
                {
                    <li>@faction.Title</li>
                }
            </ul>
        </div>
    }

    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
        <p class="text-red-700 text-sm">
            This action cannot be undone. This will permanently delete the character and all associated data.
        </p>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Id" />
        <div class="flex justify-end space-x-4">
            <a href="/Admin/Characters" class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">Cancel</a>
            <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">Delete Character</button>
        </div>
    </form>
</div>
