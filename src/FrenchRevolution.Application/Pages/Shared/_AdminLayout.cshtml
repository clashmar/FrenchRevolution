<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - French Revolution Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#1e3a5f',
                        secondary: '#2d5a87',
                        accent: '#c92727'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-100 min-h-screen">
    <div class="flex min-h-screen">
        <aside class="w-64 bg-primary text-white flex-shrink-0 fixed h-screen flex flex-col">
            <div class="p-6 border-b border-secondary">
                <h1 class="text-xl font-bold">French Revolution</h1>
                <p class="text-sm text-gray-300 mt-1">Admin</p>
            </div>
            <nav class="p-4 flex-1">
                <ul class="space-y-2">
                    <li>
                        <a href="/Admin" class="block px-4 py-2 rounded hover:bg-secondary transition-colors">
                            Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Characters" class="block px-4 py-2 rounded hover:bg-secondary transition-colors">
                            Characters
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="mt-auto p-4 border-t border-secondary">
                <form method="post" asp-page="/Admin/Logout">
                    <button type="submit" class="w-full px-4 py-2 text-left rounded hover:bg-secondary transition-colors">
                        Logout
                    </button>
                </form>
            </div>
        </aside>

        <main class="flex-1 p-8 ml-64">
            <div class="max-w-7xl mx-auto">
                @RenderBody()
            </div>
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
